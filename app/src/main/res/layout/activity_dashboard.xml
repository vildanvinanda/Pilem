<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DashboardActivity"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:background="?attr/bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/btnProfil"
                android:layout_marginRight="20dp"
                android:layout_alignParentStart="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_profile"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:textSize="24sp"
                android:text="PILEM"
                android:textColor="@color/material_blue"
                />
            <ImageView
                android:id="@+id/btnLogout"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_out"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            >

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabIndicator"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                app:tabPadding="10dp"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                app:tabMaxWidth="5dp"
                app:tabBackground="@drawable/tab_selector"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txtUpcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_centerVertical="true"
                    />
                <RelativeLayout
                    android:id="@+id/btnViewAllUpcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/imgViewAllUpcoming"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/ic_btnright"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        />
                    <TextView
                        android:id="@+id/txtViewAllUpcoming"
                        android:layout_toStartOf="@+id/imgViewAllUpcoming"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_blue"
                        android:text="View All"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recUpcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/txtPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Popular Movie"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppinssemibold"
                    />
                <RelativeLayout
                    android:id="@+id/btnViewAllPopular"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/right"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/ic_btnright"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        />
                    <TextView
                        android:id="@+id/txtViewAllPopular"
                        android:layout_toStartOf="@+id/right"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_blue"
                        android:text="View All"
                        android:textSize="12dp"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recPopular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>