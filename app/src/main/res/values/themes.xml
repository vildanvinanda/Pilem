<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieAplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_blue</item>
        <item name="colorPrimaryVariant">@color/material_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="bg">@color/light_white</item>
        <item name="boldText">@color/black_bold_text</item>
        <item name="secondboldText">@color/secound_black_bold_text</item>
        <item name="regularText">@color/black_regular_text</item>
        <item name="appbar">@color/light_white</item>
        <item name="card">@color/white</item>
        <item name="bgrounded">@color/secound_black_bold_text</item>
        <item name="appbarAttribute">@color/material_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_blue</item>
        <item name="colorSecondaryVariant">@color/material_blue</item>
        <item name="colorOnSecondary">@color/material_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/light_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>